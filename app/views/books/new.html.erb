<h1>新增書籍</h1>

<% if @book.errors.any? %>
<h2>
    <% @book.errors.full_messages.each do |message| %>
    <li>
        <%= message %>
    </li>
    <% end %>
</h2>
<% end %>

<%= form_with(model: Book.new) do |form| %>

<div>
    <%= form.label :name, '書名' %>
    <%= form.text_field :name %>
</div>
<div>
    <%= form.label :date, '日期' %>
    <%= form.date_field :date %>
</div>
<div>
    <%= form.label :price, '售價' %>
    <%= form.number_field :price %>
</div>
<div>
    <%= form.label :pages, '頁數' %>
    <%= form.number_field :pages %>
</div>
<div>
    <%= form.label :isbn, 'ISBN' %>
    <%= form.number_field :isbn %>
</div>

<%= form.submit '新增' %>

<% end %>